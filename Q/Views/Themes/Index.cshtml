@model IEnumerable<Q.Models.Theme>

@{
    ViewData["Title"] = "All Themes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Themes</h1>


<p>
    <a asp-action="Index" asp-controller="Home">Back to home</a>
</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HexForgroundColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HexBackgroundColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HexForgroundColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HexBackgroundColor)
                </td>
                <td>
                    <a href="#" class="changeTheme" BackC="@item.HexBackgroundColor" ForC="@item.HexForgroundColor">Use</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

<script>
    $( ".changeTheme" ).click(function() {
        var backC = $(this).attr("BackC");
        var forC = $(this).attr("ForC");

        setCookie("BackC",backC,5);
        setCookie("ForC",forC,5);

        myFunction_set(backC,forC);
    });
</script>

}
