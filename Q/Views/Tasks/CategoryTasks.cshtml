
@{
    ViewData["Title"] = "CategoryTasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search</h1>

<h4>Category</h4>

<p>
    <a asp-action="Index" asp-controller="Home">Back to home</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
         <form asp-action="CategoryTasks">
            
            <div class="form-group">
                <label for="category" class="control-label"></label>
                <input type="number" name="category" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
